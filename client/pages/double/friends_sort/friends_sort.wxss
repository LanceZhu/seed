@import "../../../utils/animate.wxss";
@import "/utils/buttons.wxss";

.title{
  text-align: center;
  margin:30rpx;
}

.chapter_list{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.sort{
  width: 80%;
  height: 80rpx;
  margin-bottom: 25rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 38rpx;
}

.fadeIn {
  background: #e03e39;
}

.enrollToast {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 110%;
  font-size: 36rpx;
}

.enrollToast .toast {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.8;
  background: #666;
  z-index: 100;
}

.enrollToast .content {
  position: relative;
  top: 50%;
  z-index: 200;
  width: 70%;
  height: 20%;
  background: #fff;
  left: 5%;
  border-radius: 10rpx;
  padding:100rpx 10%;
  opacity: 0.9;
}