@import '../../template/calendar/index.wxss';

.device{
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header{
  width: 750rpx;
  height: 100rpx;
}

.content{
  background: #F2F2F2;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap:wrap;
}

.content .user{
  background: white;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.content .user .image{
  display: block;
  width: 154rpx;
  height: 154rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.content .user .name{
  font-size:18px;
}

.content .user .detail{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 530rpx;
  height: 160rpx;
  font-size:50rpx;
}

.content .user .detail .id{
  color: gray;
  font-size:14px;
}

.content .user .detail .detail-two{
  display:flex;
  flex-direction: raw;
  width:450rpx;
  height:50rpx;
  border-top-color: #F2F2F2;
  border-top-width: 1rpx;
  border-top-style: solid;
 
}

.content .user .detail .detail-two .learned{
  width:225rpx;
  text-align: center;
  border-right-color: #F2F2F2;
  border-right-width: 1rpx;
  border-right-style: solid;
  margin:10rpx;
  font-size: 16px;
}

.content .user .detail .detail-two .badge{
  width:225rpx;
  text-align: center;
  margin:10rpx;
  font-size: 16px;
}

.content .notification{
  background: white;
  margin: 20rpx 0;
  /*width: 750rpx;*/
  /*height: 300rpx;*/
}

.content .notification .title{
  height: 75rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  padding:10rpx 20rpx;
  border-bottom:1rpx solid #F2F2F2;
}

.content .notification .title .desc{
  width: 600rpx;
}

.content .notification .programs{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.content .notification .programs .program{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  margin-left: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 144rpx;
  width: 120rpx;
}

.content .notification .programs .program .image{
  width: 110rpx;
  height: 85rpx;
  padding-bottom: 20rpx;
}

.calendar_switch {
  background-color:white; 
  display: flex;
  width: 100%;
  height: 130rpx;
  justify-content: space-between;
  align-items: flex-end;
}

.calendar_switch .date {
    display: flex;
    height: 78rpx;
    margin-left: 20%;
    line-height: 78rpx;
    font-size: 61rpx;
    font-weight: bold;
    align-items: center;
}

.date .signin{
  font-size: 50rpx;
}

.date .month {
    color: #444444;
}

.date .year {
    color: #AAAAAA;
}

.date .arrow {
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx;
}

.date .arrow image {
    display: block;
    width: 100%;
    height: 100%;
}

.calendar_switch .day {
    width: 20%;
    display: flex;
}

.day .image {
    /*display: block;*/
    position: relative;
    width: 45rpx;
    height: 45rpx;
    /*margin: 15rpx auto;*/
    margin: 15rpx;
}

.day .image .number {
    position: absolute;
    top: 19rpx;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 18rpx;
    font-weight: bold;
}

.day .image .signin {
    position: absolute;
    top: 19rpx;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 23rpx;
    font-weight: bold;
}

.calendar_wrap {
  background-color: white; 
  overflow: hidden;
}

.sign-btn{
  margin-top: 20px;
  width: 100px;
  height: 40px;
  line-height: 40px;
  background-color: #6A84E3;
  color: #FFFFFF;
  letter-spacing: 5px;
  padding: 0px;
}
