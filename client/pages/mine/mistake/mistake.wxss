.device{
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header{
  position: fixed;
  z-index: 2;
  top: 0;
  height: 100rpx;
  width: 750rpx;
}

.header_image{
  height: 80rpx;
  width: 750rpx;
}

.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #6A84E3;  
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
  } 

.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #6A84E3;  
}  
.on{ 
    border-bottom: 4rpx solid #6A84E3;
    font-size: 35rpx;
    font-weight: 500;
}
  
.swiper-box{ 
    display: block; 
    height: 100%; 
    width: 750rpx; 
    overflow: hidden;
  }

.content{
  background: #F2F2F2;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap:wrap;
  z-index: 1;
}

.content .news .box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
  margin-top:20rpx;
  padding: 20rpx 50rpx;
}

.content .news .box_hover{
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: rgb(248,248,248);
  margin-top:20rpx;
  width: 100%;
  padding: 20rpx 50rpx;
}

.content .news .box .title{
  line-height: 80rpx;
  text-align: left;
  font-size: 42rpx;
}

.content .news .box .question{
  line-height: 80rpx;
  text-align: left;
  font-size: 34rpx;
}

.content .news .box .info{
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #00CACA;
}