@import '/towxml/style/theme/min.wxss';
@import '/towxml/style/main_min.wxss';

.device{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.header{
  background: #6A84E3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: white;
  padding: 20rpx;
}

.question{
  margin-top: 30rpx;
  width:650rpx;
  text-align: left;
  color: #fff;
  font-size: 37rpx;
}

.answer{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-top: 20rpx;
  font-size: 37rpx;
  /*font-weight: 600;*/
  width:650rpx;
}

.all_choice{
  width: 600rpx;
  height: 65rpx;
  color: #fff;
  font-size: 35rpx;
  margin-top: 5rpx;
}

.right_choice{
  width: 600rpx;
  height: 65rpx;
  text-align: center;
  margin-top: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 50rpx;
  font-size: 37rpx;
}

.content .next{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 50rpx;
}

.content .next .button{
  background: #6A84E3;
  padding: 20rpx 60rpx;
  color: white;
  border-radius: 20rpx;
}