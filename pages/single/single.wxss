.device{
  background: rgb(248, 248, 248);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header{
  width:100%;
  height: 200rpx;
  line-height: 200rpx;
  background-color: #fff;
  text-align: center;
}

.content{
  background: rgb(248, 248, 248);
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  flex-wrap:wrap;
}

.question{
  width:600rpx;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  border: 1px solid #000;
  border-radius: 20rpx;
  margin-bottom: 50rpx; 
}

.answer{
  border: 1px solid #000;
  border-radius: 50rpx;
  width:500rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
  text-align: center;
  background: #ececec;
  color: #000;
}

.right {
  /*选择正确的答案颜色*/
  background: #3ede58;
  color: #fff;
}

.error {
  /*选择错误的答案颜色*/
  background: #e53117;
  color: #fff;
}

.box{
  width:300rpx;
  height: 400rpx;
  margin-top: 50rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  box-shadow: 5px 5px 5px #999;
}

.box_image{
  width: 200rpx;
  height: 200rpx;
}

.box_title{
    display: block;
}