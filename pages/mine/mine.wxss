.cur-date{
  text-decoration: underline;
}

.curdate-block{
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
  width: 100%;
}
.curdate-block button{
  margin: 0px 30px;
  background-color: #6A84E3;
  color: #FFFFFF;
  width: 50px;
  height: 30px;
