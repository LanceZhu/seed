.device{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
}

.header{
  position: absolute;
  top: -500rpx;
  width: 1200rpx;
  height: 600rpx;
  background-color: #6A84E3;
  border-radius: 50%;
  text-align: center;
}

.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.box{
  margin-bottom: 20rpx;
  width:650rpx;
  height: 100rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center; 
}

.box_image_locked{
  width: 68rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 50%;
  border: 1px solid #5EBDB7;
  background-color: #5EBDB7;
  color:#FFFFFF;
  text-align: center;
}

.box_image_unlocked{
  width: 68rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 50%;
  border: 1px solid #72CB6F;
  background-color: #72CB6F;
  color:#FFFFFF;
  text-align: center;
}

.box_content_locked{
    background: #5EBDB7;
    width: 500rpx;
    height: 100rpx;
    font-size: 36rpx;
    line-height: 80rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border: 1px solid #5EBDB7;
    border-radius: 10rpx;
    color:#FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.box_content_unlocked{
    background: #72CB6F;
    width: 500rpx;
    height: 100rpx;
    font-size: 36rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border: 1px solid #72CB6F;
    border-radius: 10rpx;
    color:#FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.box_locked{
  width: 50rpx;
  height: 50rpx;
}